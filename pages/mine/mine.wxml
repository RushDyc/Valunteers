
<view class="user_info_warp">
    <view wx:if="{{userinfo.avatarUrl}}" class="user_img_warp">
        <image class="user_bg" src = "{{userinfo.avatarUrl}}"></image>
        <view class="user_info">
            <image class="user_icon" src = "{{userinfo.avatarUrl}}"></image>
            <view class="user_name">{{userinfo.nickName}}</view>
        </view>
    </view>
    <view wx:else class="user_btn">
        <!-- <navigator url="/pages/login/login">登录</navigator> -->
        <button type="primary" bindtap="getUserProfile">登录</button>
    </view>
</view>
<view class="user_content">
    <view class="user_main">
        <!-- 活动相关 -->
        <view class="act_info_warp">
            <navigator url = "/pages/enroll/enroll">
                <image src="../../icons/enr.png" ></image>
                <view class="act_me">我的报名</view>
            </navigator>
            <navigator url = "/pages/collect/collect">
                <image  src="../../icons/col.png" ></image>
                <view class="act_me">我的收藏</view>
            </navigator>
        </view>
        <!-- 应用相关 -->
        <view class="app_info_warp">
            <view class="app_info_item">
                <image src="../../icons/que.png"></image>
                <text>常见问题</text>
            </view>
            <view class="app_info_item">
                <image src="../../icons/conn.png"></image>
                <text>在线咨询(热线12355)</text>
            </view>
            <view class="app_info_item">
                <image src="../../icons/che.png"></image>
                <text>检查更新</text>
            </view>
        </view>
        <!-- 推荐 -->
        <view class="recommend_warp">
            <view class="rec_info_item">
                <image src="../../icons/rec.png"></image>
                <text>把应用推荐给其他人</text>
            </view>
        </view>
    </view>
</view>
  
