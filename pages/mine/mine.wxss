page {
  background-color: #edece8;
}
.user_info_warp {
  height: 40vh;
  position: relative;
}
.user_info_warp .user_img_warp {
  position: relative;
}
.user_info_warp .user_img_warp .user_bg {
  width: 100%;
  height: 40vh;
  filter: blur(15rpx);
}
.user_info_warp .user_img_warp .user_info {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 25%;
  text-align: center;
}
.user_info_warp .user_img_warp .user_icon {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.user_info_warp .user_img_warp .user_name {
  color: #fff;
  margin-top: 30rpx;
  font-size: 40rpx;
}
.user_info_warp .user_btn {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 40%;
  padding: 35rpx;
}
.user_content {
  position: relative;
}
.user_content .user_main {
  position: absolute;
  width: 90%;
  left: 50%;
  transform: translateX(-50%);
}
.user_content .user_main .act_info_warp {
  margin-top: 80rpx;
  background-color: #fff;
}
.user_content .user_main .act_info_warp navigator {
  padding: 15rpx 0;
  display: flex;
  border-bottom: 1rpx solid #eee;
}
.user_content .user_main .act_info_warp navigator image {
  margin: 0 25rpx 0 60rpx;
  width: 6vw;
  height: 4vh;
}
.user_content .user_main .act_info_warp navigator .act_me {
  flex: 1;
  font-size: 33rpx;
}
.user_content .user_main .app_info_warp {
  margin-top: 30rpx;
  background-color: #fff;
}
.user_content .user_main .app_info_warp .app_info_item {
  display: flex;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #eee;
}
.user_content .user_main .app_info_warp .app_info_item image {
  margin: 0 25rpx 0 60rpx;
  width: 6vw;
  height: 4vh;
}
.user_content .user_main .app_info_warp .app_info_item text {
  flex: 1;
  font-size: 33rpx;
}
.user_content .user_main .recommend_warp {
  margin-top: 30rpx;
  background-color: #fff;
}
.user_content .user_main .recommend_warp .rec_info_item {
  display: flex;
  padding: 15rpx 0;
}
.user_content .user_main .recommend_warp .rec_info_item image {
  margin: 0 25rpx 0 60rpx;
  width: 6vw;
  height: 4vh;
}
.user_content .user_main .recommend_warp .rec_info_item text {
  flex: 1;
  font-size: 30rpx;
}
